<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout android:id="@+id/scene1Holder"
            android:gravity="center_horizontal"
            android:layout_height="fill_parent"
            android:layout_width="100sp"
            android:layout_weight="1"
            android:paddingLeft="10sp"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:paddingTop="20sp">

        <Button
            android:id="@+id/layoutOkay"
            android:text="Rotate Left"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/layoutCancel"
            android:text="Rotate Right "
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let it Snow"
            android:id="@+id/snow" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:weightSum="1">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Move left"
            android:id="@+id/button3"
            android:layout_weight="0.26" />

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Move up"
            android:id="@+id/button"
            android:layout_weight="0.20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Move down"
            android:id="@+id/button2"
            android:layout_weight="0.27" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Move right"
            android:id="@+id/button4"
            android:layout_weight="0.19" />

    </LinearLayout>

</LinearLayout>